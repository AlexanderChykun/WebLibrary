@model IEnumerable<string>

@Html.ActionLink("Home","List","Book")

@foreach ( var link in Model )
{
    @Html.RouteLink( link, new
        {
            controller = "Book",
            action = "List",
            author = link,
            page = 1
        },
        new
        {
            @class=link == ViewBag.SelectedAuthor ? "selected" : null
        } )
}
